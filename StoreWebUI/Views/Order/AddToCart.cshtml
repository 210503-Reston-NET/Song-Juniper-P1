@model StoreModels.LineItem

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Item to Cart</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart">
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" readonly class="form-control-plaintext" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea asp-for="Product.Description" readonly class="form-control-plaintext"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" readonly class="form-control-plaintext" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" min="0" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="OrderId" value=@Model.OrderId />
            <input type="hidden" asp-for="ProductId" value=@Model.ProductId />
            <input type="hidden" asp-for="Id" value=@Model.Id />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back To List", "Inventory", "Location", new { id = ViewBag.LocationId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}