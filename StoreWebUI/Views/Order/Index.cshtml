@model StoreModels.Order

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cart</h1>

<div>
    <h4>@ViewBag.CurrentLocation.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Closed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Closed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
    <h4>Line Items</h4>
    <dl class="row">
        @foreach (var item in Model.LineItems)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Quantity)
            </dd>
        }
    </dl>
</div>
<form asp-action="PlaceOrder">
    <input type="hidden" asp-for="Id" value="Model.Id"/>
    <input type="submit" value="Place Order" class="btn btn-primary" /> |
    @Html.ActionLink("Back To List", "Inventory", "Location", new { id = Model.LocationId })
</form>
