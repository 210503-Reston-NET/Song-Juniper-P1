@model StoreWebUI.Models.InventoryVM

@{
    ViewData["Title"] = "Inventory";
}

<h2>Add Item to Inventory</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddInventory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <select asp-items="Model.ProductOptions" asp-for="ProductId" class="form-control"></select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" min="0" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="LocationId" value=@Model.LocationId />

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>